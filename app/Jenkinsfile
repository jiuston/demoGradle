pipeline{
    agent any

    stages{
        stage('clean'){
            steps{
                script{
                    bat '''
                        gradle clean
                        '''
                }
            }
        }
        stage('build'){
            steps{
                script{
                    bat '''
                        gradle jar
                        '''
                }
            }
        }

        stage('run'){
            steps{
                script{
                    bat '''
                        java -jar app/build/libs/app.jar
                        '''
                }
            }
        }
    }
}